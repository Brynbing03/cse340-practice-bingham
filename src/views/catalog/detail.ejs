<%- include('../partials/header') %>

<main>
  <div class="course-header">
    <h1><%= course.courseCode %>: <%= course.name %></h1>
    <p class="course-meta"><%= course.courseCode %> • <%= course.creditHours %> credits • <%= course.department %></p>
  </div>

  <div class="sections">
    <div class="sections-header">
      <h2>Available Sections</h2>

      <div class="sort-options">
        <span>Sort by: </span>
        <a href="/catalog/<%= course.slug %>?sort=time" class="<%= currentSort === 'time' ? 'active' : '' %>">Time</a>
        <a href="/catalog/<%= course.slug %>?sort=professor" class="<%= currentSort === 'professor' ? 'active' : '' %>">Professor</a>
        <a href="/catalog/<%= course.slug %>?sort=room" class="<%= currentSort === 'room' ? 'active' : '' %>">Room</a>
      </div>
    </div>

    <div class="section-list">
      <% if (!sections || sections.length === 0) { %>
        <p>No sections available.</p>
      <% } else { %>
        <% sections.forEach(section => { %>
          <div class="section-card">
            <div class="section-time"><%= section.time %></div>
            <div class="section-room">Room: <%= section.room %></div>
            <div class="section-professor">
              Instructor:
              <a href="/faculty/<%= section.professorSlug %>"><%= section.professor %></a>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

  
   <!-- here is my temporary debug block for query paraameters for the intro to middleware assignment... -->
  <% if (typeof queryParams !== "undefined" && Object.keys(queryParams).length > 0) { %>
    <div class="query-debug">
      <h3>Query Parameters (Debug)</h3>
      <ul>
        <% Object.keys(queryParams).forEach(key => { %>
          <li><strong><%= key %>:</strong> <%= queryParams[key] %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>

  <div class="navigation">
    <p><a href="/catalog">&larr; Back to Course Catalog</a></p>
  </div>
</main>

<%- include('../partials/footer') %>
